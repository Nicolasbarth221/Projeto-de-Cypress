{
  "name": "projeto-cypress",
  "version": "1.0.0",
  "description": "Projeto de automação de testes com Cypress. Inspirado no curso 'Cypress, do Zero à Nuvem' da Escola Talking About Testing.",
  "main": "src/index.html",
  "scripts": {
    "cy:open": "cypress open",
    "cy:open:mobile": "cypress open --config viewportWidth=410 viewportHeight=660",
    "test": "cypress run",
    "test:mobile": "cypress run --config viewportWidth=410 viewportHeight=660",
    "test:ci": "cypress run --browser chrome --headless",
    "test:cloud": "cypress run --record"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nicolasbarth221/Projeto-de-Cypress.git"
  },
  "keywords": [
    "Cypress",
    "Test Automation",
    "E2E Testing",
    "QA Engineer",
    "Cypress Cloud",
    "GitHub Actions"
  ]
}